<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Volver"
                    android:src="@drawable/outline_arrow_back_24" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/favButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Favorito"
                    android:src="@drawable/outline_favorite_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/TextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Procesador AMD Ryzen 3 4100 3.8GHz Box"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ryzen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8/5"
                android:paddingTop="8dp"
                android:textColor="#444444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Envío: Gratis | Devolución: Gratis"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Características:"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:textColor="#004D40" />

            <TextView
                android:id="@+id/TextSpecification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Núcleos de CPU: 4\nHilos: 4\nNº de núcleos de GPU: 8\nVelocidad base de reloj: 3.6 GHz\nVelocidad máxima del núcleo turbo: 4 GHz\nCaché L1 total: 384KB\nCaché L2 total: 2 MB\nCaché L3 total: 4 MB\nTecnología de proceso: 12nm FinFET\nSocket: AM4\nPCIe: 3.0 x8\nRefrigeración: Wraith Stealth\nTDP: 65W\nTemp. máx: 95 ºC\nMemoria máxima: 2933 MHz DDR4\nCanales: 2\nFrecuencia gráficos: 1250 MHz\nGráficos: Radeon Vega 8\nDisplay Port: Sí\nHDMI: Sí"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/TextPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingTop="16dp"
                android:text="51,80€"
                android:textColor="#197D89"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addToCartButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Añadir a la Cesta"
                android:textColor="#FFFFFF"
                app:backgroundTint="#197D89"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
